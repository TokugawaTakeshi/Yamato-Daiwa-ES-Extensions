{
  "compilerOptions": {

    "target": "ES2020",
    "moduleResolution": "Node",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,

    "removeComments": true,

    "outDir": "Distributable/",
    "declaration": true

  },

  "include": [ "Source/**/*" ]

}
