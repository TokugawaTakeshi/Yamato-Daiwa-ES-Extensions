.Header

  display flex
  align-items center

  padding 8px 16px

  background-image linear-gradient(0.25turn, #55cbf2, #2f81ed)


  &-LogoAndTitleLink

    display flex
    align-items center


    &:hover

      opacity 90%


    &:focus

      box-shadow 0 0 3px 5px rgba(orange, 0.75)


    &:active

      opacity 75%


  &-Logo

    width 48px


  &-Title

    display flex
    flex-direction column

    font-weight bold
    color white

    margin-left 12px


    &-Company

      font-size 18px

      margin-left 12px


    &-LibraryName

      font-family Arial Black, Arial Bold, Gadget, sans-serif
      font-size 24px
      font-weight bold

      color white


  &-DropDownList

    margin-left auto
