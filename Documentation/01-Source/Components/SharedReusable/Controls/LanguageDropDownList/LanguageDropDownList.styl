.LanguageDropDownList

  position relative


  &-CurrentlySelectedOption

    border-width 1px
    border-radius 3px
    padding 8px 12px

    border-style solid
    border-color blue


    &-Label

      font-size 14px

      font-weight bold
      color white


  &-ListBox

    width 100%
    border-radius 3px

    background white
    box-shadow 0 0 4px 4px alpha(black, 0.25)

    position absolute
    bottom 0
    transform translateY(100%)


  &-Option

    &-Link

      display block
      padding 8px 12px
      font-size 14px

      color: ShadesOfGray__39ColorsW3C_Palette[10]
      cursor pointer


      &:hover

        background lightgoldenrodyellow


      &:focus

        background lightpink


      &:active

        background lightcoral
